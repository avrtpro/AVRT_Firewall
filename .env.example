# AVRT™ Firewall Full-Stack Environment Configuration
# Copy this file to .env and fill in your values
# Never commit your real .env file to version control

# ============================================================================
# Backend Server Configuration
# ============================================================================

# Server port (default: 3001)
PORT=3001

# Node environment (development | production)
NODE_ENV=development

# CORS origin for frontend (default: http://localhost:5173)
CORS_ORIGIN=http://localhost:5173

# ============================================================================
# OpenAI Whisper API (Voice Transcription)
# ============================================================================

# OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Whisper model (whisper-1)
WHISPER_MODEL=whisper-1

# Default language (en, es, fr, de, etc.)
WHISPER_LANGUAGE=en

# ============================================================================
# AVRT™ License (Optional - for production)
# ============================================================================

# AVRT License Key (get from: https://buy.stripe.com/test_28o5mvaYPgKs2BW144)
# Tiers: Startup ($19/mo), Growth ($199/mo), Enterprise ($1,999/mo)
AVRT_LICENSE_KEY=

# ============================================================================
# SPIEL™ Framework Configuration
# ============================================================================

# Safety threshold (0-100, default: 85)
SPIEL_SAFETY_THRESHOLD=85

# Integrity threshold (0-100, default: 80)
SPIEL_INTEGRITY_THRESHOLD=80

# Ethics threshold (0-100, default: 90)
SPIEL_ETHICS_THRESHOLD=90

# Composite score threshold (0-100, default: 85)
SPIEL_COMPOSITE_THRESHOLD=85

# ============================================================================
# THT™ Protocol Configuration
# ============================================================================

# Enable Truth validation (true | false)
THT_ENABLE_TRUTH=true

# Enable Honesty checks (true | false)
THT_ENABLE_HONESTY=true

# Enable Transparency logging (true | false)
THT_ENABLE_TRANSPARENCY=true

# THT confidence threshold (0-1, default: 0.8)
THT_CONFIDENCE_THRESHOLD=0.8

# ============================================================================
# Logging & Persistence
# ============================================================================

# Enable audit trail (true | false)
ENABLE_AUDIT_TRAIL=true

# Enable SHA-256 hash logging (true | false)
ENABLE_HASH_LOGGING=true

# Log directory (default: ./logs)
LOG_DIR=./logs

# Enable OriginStamp blockchain timestamping (true | false)
ENABLE_ORIGINSTAMP=false

